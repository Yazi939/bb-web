{
  "name": "bunker-boats",
  "private": true,
  "version": "2.1.5",
  "type": "module",
  "main": "main.cjs",
  "homepage": ".",
  "author": "Bunker Boats Team",
  "description": "Bunker Boats - система управления топливом и расходами",
  "productName": "Bunker Boats",
  "scripts": {
    "clean": "rimraf dist build",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on tcp:5174 && electron .\"",
    "electron:build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder --dir",
    "make-exe": "npm run build && npm run build:backend && npm run package",
    "package": "electron-builder --win --publish never",
    "build:ts": "tsc -p tsconfig.preload.json",
    "build:backend": "tsc -p tsconfig.backend.json",
    "postbuild": "copy src\\database\\api.js build\\database\\api.js"
  },
  "build": {
    "appId": "com.yourcompany.fuelapp",
    "publish": {
      "provider": "github",
      "owner": "Yazi939",
      "repo": "Bunker-final-product"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.cjs",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src",
        "to": "app/src",
        "filter": ["**/*"]
      },
      {
        "from": "build/database",
        "to": "app/build/database",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": false,
    "compression": "store",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.0",
    "@types/socket.io-client": "^1.4.36",
    "antd": "^5.14.1",
    "axios": "^1.9.0",
    "dayjs": "^1.11.10",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.8.3",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  }
}
